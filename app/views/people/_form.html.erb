<%= simple_form_for @person do |f| %>
	
	<%= f.input :name %>
	<%= f.input :cpf %>
	<%= f.input :email %>
	<%= f.input :birth_date %>
	<%= f.input :occupation %>
	<%= f.input :status, as: :radio_buttons, collection: [['Ativo', true], ['Inativo', false]] %>

	<%= f.submit nil, class: 'btn' %>

<% end %>