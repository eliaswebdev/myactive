<p id="notice"><%= notice %></p>
<div class="page-header">
  <%= link_to 'New Article', new_article_path, class: 'btn btn-primary pull-right' %>
  <h1>Articles</h1>
</div>

<table class="table table-striped table-bordered table-hover table-condensed"> 
  <thead>
    <tr>
      <th>Title</th>
      <th>Published at</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.published_at %></td>
        <td><%= article.status %></td>
        <td>
          <%= link_to 'Show', article, class: 'btn btn-xs btn-default' %>
          <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-xs btn-info' %>
          <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
