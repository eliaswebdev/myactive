<h1>Articles list</h1>
<table border=1 width="100%">	
	<thead>
		<tr>
			<th>id</th>
			<th>title</th>
			<th>published_at</th>
			<th>status</th>
			<th>actions</th>
		</tr>
	</thead>

	<tbody>

<% @articles.each do |article| %>
	<tr>
		<td><%= article.id %></td>
		<td><%= article.title %></td>
		<td><%= article.published_at %></td>
		<td><%= article.status %></td>
		<td>
			<a href="articles/<%= article.id %>">Show</a>
			<%= link_to 'Show', article_path(article.id) %>
			<%= link_to 'Show', article %>
			<a href="">Edit</a>
			<a href="">Delete</a>
		</td>
	</tr>
<% end %>

	</tbody>
</table>
